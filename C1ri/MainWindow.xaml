<Window x:Class="C1ri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C1ri"
        mc:Ignorable="d"
        Title="Практическая 1" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="файл">
                <MenuItem Header="О программе" Click="Information_Click" ></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Выход" Click = "Exit_Click"></MenuItem>
            </MenuItem>

        </Menu>
        <TextBox IsReadOnly="True" x:Name="Result" HorizontalAlignment="Left" Height="53" Margin="59,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <TextBox IsReadOnly="True" x:Name="AllNumbers" HorizontalAlignment="Left" Height="53" Margin="539,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Margin="305,224,0,0" IsCancel="True" Height="46" Click="CountClick" />
        <Button Content="О программе" HorizontalAlignment="Left" Margin="59,337,0,0" VerticalAlignment="Top" Width="136" Height="39" Click="Information_Click"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="596,337,0,0" VerticalAlignment="Top" Width="135" Height="39" Click="Exit_Click"/>
        <Label Content="Результат вычислений:" HorizontalAlignment="Left" Margin="559,150,0,0" VerticalAlignment="Top" Width="159"/>
        <Label Content="Сгенерированные числа:" HorizontalAlignment="Left" Margin="59,144,0,0" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="Nperem" HorizontalAlignment="Left" Height="54" Margin="305,125,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="161" />
    </Grid>
</Window>
